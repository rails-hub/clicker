= render "layouts/admin_menu"
#page-wrapper
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          %i.fa.fa-bar-chart-o.fa-fw
          All Teachers
        / /.panel-heading
        .panel-body
          .row
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Name
                      %th ID
                      %th Joined
                      %th Actions
                  %tbody
                    - @teachers.each_with_index do |teacher, index|
                      %tr
                        %td
                          = index + 1
                        %td
                          = teacher.name
                        %td
                          = teacher.email
                        %td
                          = teacher.joined_at
                        %td
                          = link_fa_to("edit", "", edit_admin_teacher_path(teacher))
                          = link_to 'Delete',url_for(action: :destroy,id: teacher.id),method: :delete, data: {confirm: "Are you sure?"}
