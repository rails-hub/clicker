= render "layouts/admin_menu"
#page-wrapper
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          %i.fa.fa-bar-chart-o.fa-fw
          All Courses
          .right
            Add New
        / /.panel-heading
        .panel-body
          .row
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Title
                      %th ID
                      %th Actions
                  %tbody
                    - @courses.each_with_index do |course, index|
                      %tr
                        %td
                          = index + 1
                        %td
                          = course.title
                        %td
                          = course.courseId
                        %td
                          = link_fa_to("edit", "", edit_admin_course_path(course))
                          = link_to 'Delete',url_for(action: :destroy,id: course.id),method: :delete, data: {confirm: "Are you sure?"}
