= render "layouts/left_menu"
#page-wrapper
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading
          %i.fa.fa-bar-chart-o.fa-fw
          All Interactive Items
          - if can_create_item(current_user)
            %span
              = link_to 'Add New', new_admin_interactive_item_path, :class => "btn btn-primary btn-sm"
        / /.panel-heading
        .panel-body
          .row
            .col-lg-12
              .table-responsive
                %table.table.table-bordered.table-hover.table-striped
                  %thead
                    %tr
                      %th #
                      %th Title
                      %th Type
                      %th Actions
                  %tbody
                    - @items.each_with_index do |item, index|
                      %tr
                        %td
                          = index + 1
                        %td
                          = item.title
                        %td
                          = item.type

