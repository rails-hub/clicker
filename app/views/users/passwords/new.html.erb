<div class="card card-container">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, :class => 'form-signin'}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.text_field :username, required: true, autofocus: true, :class => 'form-control' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send password" %>
      </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>